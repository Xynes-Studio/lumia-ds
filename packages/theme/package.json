{
    "name": "@lumia-ui/theme",
    "version": "0.1.0",
    "description": "React ThemeProvider for applying Lumia token CSS variables",
    "publishConfig": {
        "access": "public"
    },

    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./tailwind": {
            "types": "./dist/tailwind/tailwind.d.ts",
            "import": "./dist/tailwind/tailwind.mjs",
            "require": "./dist/tailwind/tailwind.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest run --coverage"
    },
    "peerDependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "dependencies": {
        "@lumia-ui/tokens": "workspace:*"
    },
    "devDependencies": {
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@vitest/coverage-v8": "^2.1.9",
        "happy-dom": "^20.0.10",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tsup": "^8.0.0",
        "vitest": "^2.1.9"
    }
}