{
    "name": "@lumia-ui/core",
    "version": "0.1.0",
    "description": "Core package for Lumia DS",
    "publishConfig": {
        "access": "public"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch"
    },
    "devDependencies": {
        "tsup": "^8.0.0"
    }
}