{
  "name": "@lumia-ui/cli",
  "version": "0.1.0",

  "description": "CLI utilities for Lumia DS",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "lumia": "./bin/lumia.js",
    "lumia-resource": "./bin/lumia-resource.js",
    "lumia-icon-import": "./bin/lumia-icon-import.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest run"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^13.1.0",
    "fs-extra": "^11.3.2",
    "inquirer": "^13.0.2",
    "node-plop": "^0.32.3",
    "plop": "^4.0.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.9",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  },
  "license": "ISC"
}