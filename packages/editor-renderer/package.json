{
    "name": "@lumia/editor-renderer",
    "type": "module",
    "version": "0.0.0",
    "description": "Read-only renderer for Lumia Lexical documents",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest run",
        "lint": "eslint \"src/**/*.{ts,tsx}\""
    },
    "peerDependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@vitest/coverage-v8": "^2.1.9",
        "happy-dom": "^20.0.10",
        "jsdom": "^25.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0",
        "vitest": "^2.1.9",
        "lexical": "0.38.2"
    },
    "dependencies": {
        "@lumia/components": "workspace:*",
        "@lumia/icons": "workspace:*",
        "clsx": "^2.1.1",
        "lucide-react": "^0.474.0",
        "tailwind-merge": "^2.3.0"
    }
}